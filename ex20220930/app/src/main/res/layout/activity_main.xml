<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:tag="참이슬"
            app:srcCompat="@drawable/soju_01" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:tag="동해"
            app:srcCompat="@drawable/soju_02" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:tag="원소주"
            app:srcCompat="@drawable/soju_03" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:tag="한라산"
            app:srcCompat="@drawable/soju_04" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:tag="좋은데이"
            app:srcCompat="@drawable/soju_05" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:tag="음료수"
            app:srcCompat="@drawable/soju_06" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img7"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:tag="진로"
            app:srcCompat="@drawable/soju_07" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:tag="빨간뚜껑"
            app:srcCompat="@drawable/soju_08" />

        <ImageView
            android:id="@+id/img9"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:tag="복받은부라더"
            app:srcCompat="@drawable/soju_09" />
    </LinearLayout>
</LinearLayout>